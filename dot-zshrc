export XDG_CONFIG_HOME="$HOME/.config"

eval "$(mise activate zsh)"
eval "$(starship init zsh)"

# Editor
export EDITOR="nvim"

# RipGrep
export RIPGREP_CONFIG_PATH="${HOME}/.ripgreprc"

# Homebrew auto-complete
if type brew &>/dev/null
then
  FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"

  autoload -Uz compinit
  compinit
fi

# Aliases
alias lnl="${HOME}/Code/cloud-ops/scripts/lnl"
alias ghv="gh repo view --web"
alias kctx="kubectx"
alias kns="kubens"
alias kc="kubectl"
alias zj="zellij"
alias tree="eza --tree"
alias lg="lazygit"
alias ld="lazydocker"
alias fudns='sudo dscacheutil -flushcache; sleep 2; sudo killall -HUP mDNSResponder;'
alias vim="vim"
alias c="NODE_TLS_REJECT_UNAUTHORIZED=0 claude"

setopt completealiases
function cdc() {
  cd ${HOME}/Code/$1
}

source <(fzf --zsh)

# Added by LM Studio CLI (lms)
export PATH="$PATH:/Users/cody/.lmstudio/bin"
# End of LM Studio CLI section

